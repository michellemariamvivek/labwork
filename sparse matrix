#include <stdio.h>
void main()
{
    int choice,wish=1;
    int r1,r2,c1,c2,a[100][100],b[100][100],c[100][100],d[100][100],sum[100][100];
    int i,j,count1=0,k=1,count2=0,l=1;
    do{
    printf("Enter your choice:\n1.Add two sparse matrix\n2.Transpose of sparse matrix\n");
    scanf("%d",&choice);
    switch(choice)
    {
        case 1:
        {
            printf("enter the number of rows and columns of matrix 1:\n");
            scanf("%d%d",&r1,&c1);
            printf("enter the elements of matrix 1:\n");
            for(i=0;i<r1;i++)
            {
                for(j=0;j<c1;j++)
                {
                    printf("enter the element a%d%d:",i+1,j+1);
                    scanf("%d"&a[i][j]);
                    if(a[i][j]!=0)
                    {
                        count1++;
                    }
                }
            }
            printf("The first matrix is:\n");
            for(i=0;i<r1;i++)
            {
                for(j=0;j<c1;j++)
                {
                    printf("%d\t",a[i][j]);
                }
                printf("\n");
            }
            b[0][0]=r1;
            b[0][1]=c1;
            b[0][2]=count1;
            k=1;
            for(i=0;i<r1;i++)
            {
                for(j=0;j<c1;j++)
                {
                    if(a[i][j]!=0)
                    {
                        b[k][0]=i;
                        b[k][1]=j;
                        b[k][2]=a[i][j];
                        k++;
                    }
                }
            }
            printf("the sparse matrix representation of matrix1 is:\n");
            for(i=0;i<count1;i++)
            {
                for(j=0;j<3;j++)
                {
                    printf("%d\t",b[i][j]);
                }
                printf("\n");
            }
            printf("enter the number of rows and columns of matrix 2:\n");
            scanf("%d%d",&r2,&c2);
            printf("enter the elements of matrix 2:\n");
            for(i=0;i<r1;i++)
            {
                for(j=0;j<c1;j++)
                {
                    printf("enter the element c%d%d:",i+1,j+1);
                    scanf("%d"&c[i][j]);
                    if(c[i][j]!=0)
                    {
                        count2++;
                    }
                }
            }
            printf("The second matrix is:\n");
            for(i=0;i<r2;i++)
            {
                for(j=0;j<c2;j++)
                {
                    printf("%d\t",c[i][j]);
                }
                printf("\n");
            }
            d[0][0]=r2;
            d[0][1]=c2;
            d[0][2]=count2;
            l=1;
            for(i=0;i<r2;i++)
            {
                for(j=0;j<c2;j++)
                {
                    if(c[i][j]!=0)
                    {
                        d[l][0]=i;
                        d[l][1]=j;
                        d[l][2]=c[i][j];
                        l++;
                    }
                }
            }
            printf("the sparse matrix representation of matrix2 is:\n");
            for(i=0;i<count2;i++)
            {
                for(j=0;j<3;j++)
                {
                    printf("%d\t",d[i][j]);
                }
                printf("\n");
            }
            if(r1==r2&&c1==c2)
            {
                i=1;j=1;k=1;
                sum[0][0]=b[0][0];
                sum[0][1]=b[0][1];
                while(i<=count1&&j<=count2)
                {
                    if(b[i][0]!=d[j][0])
                    {
                        if(b[i][0]<d[j][0])
                        {
                            sum[k][0]=b[i][0];
                            sum[k][1]=b[i][1];
                            sum[k][2]=b[i][2];
                            i++;
                            k++;
                        }
                        else if(b[i][0]>d[j][0])
                        {
                            sum[k][0]=d[j][0];
                            sum[k][1]=d[j][1];
                            sum[k][2]=d[j][2];
                            j++;
                            k++;
                        }
                    }
                    else if(b[i][0]!=d[j][0])
                    {
                        if(b[i][1]<d[j][1])
                        {
                            sum[k][0]=b[i][0];
                            sum[k][1]=b[i][1];
                            sum[k][2]=b[i][2];
                            i++;
                            k++;
                        }
                        else if(b[i][1]>d[j][1])
                        {
                            sum[k][0]=d[j][0];
                            sum[k][1]=d[j][1];
                            sum[k][2]=d[j][2];
                            j++;
                            k++;
                        }
                        else if(b[i][1]==d[j][1])
                        {
                            sum[k][0]=d[j][0];
                            sum[k][1]=d[j][1];
                            sum[k][2]=b[i][2]+d[j][2];
                            j++;
                            i++;
                            k++;
                        }
                    }
                }
                while(i<=count1)
                {
                    sum[k][0]=b[i][0];
                    sum[k][1]=b[i][1];
                    sum[k][2]=b[i][2];
                    i++;
                    k++;
                }
                while(j<=count2)
                {
                    sum[k][0]=d[j][0];
                    sum[k][1]=d[j][1];
                    sum[k][2]=d[j][2];
                    j++;
                    k++;  
                }
                sum[0][2]=k-1;
                printf("The added matrix's representation is:\n");
                for(i=0;i<k;i++)
                {
                    for(j=0;j<3;j++)
                    {
                        printf("%d\t",sum[i][j]);
                    }
                    printf("\n");
                }
            }
            else if(r1!=r2||c1!=c2)
            {
                printf("since the two entered matrices do not have the same order, addition of the same cannot be implemented\n");
                break;
            }
            
        }
        case 2:
            {
                printf("enter the number of rows and columns of the matrix:\n");
                scanf("%d%d",&r1,&c1);
                printf("enter the elements of matrix:\n");
                for(i=0;i<r1;i++)
                {
                for(j=0;j<c1;j++)
                {
                    printf("enter the element a%d%d:",i+1,j+1);
                    scanf("%d"&a[i][j]);
                    if(a[i][j]!=0)
                    {
                        count1++;
                    }
                }
            }
            printf("The first matrix is:\n");
            for(i=0;i<r1;i++)
            {
                for(j=0;j<c1;j++)
                {
                    printf("%d\t",a[i][j]);
                }
                printf("\n");
            }
            b[0][0]=r1;
            b[0][1]=c1;
            b[0][2]=count1;
            k=1;
            for(i=0;i<r1;i++)
            {
                for(j=0;j<c1;j++)
                {
                    if(a[i][j]!=0)
                    {
                        b[k][0]=i;
                        b[k][1]=j;
                        b[k][2]=a[i][j];
                        k++;
                    }
                }
            }
            printf("the sparse matrix representation of given matrix is:\n");
            for(i=0;i<count1+1;i++)
            {
                for(j=0;j<3;j++)
                {
                    printf("%d\t",b[i][j]);
                }
                printf("\n");
            }
            k=1;
            for(i=0;i<c1;i++)
            {
                for(j=1;j<=count1;j++)
                {
                    if(b[j][1]==i)
                    {
                    sum[k][0]=b[j][0];
                    sum[k][1]=b[j][1];
                    sum[k][2]=b[j][2];
                    k++;
                    }
                }
            }
            sum[0][0]=c1;
            sum[0][1]=r1;
            sum[0][2]=count1;
            printf("the transpose is:\n");
            for(i=0;i<k;i++)
            {
                for(j=0;j<3;j++)
                {
                    printf("%d\t",sum[i][j]);
                }
                printf("\n");
            }
            break;
            }
            default:printf("invalid choice\n");
    }
    printf("do you wish to continue\n");
    printf("1.Yes\n2.No\n");
    printf("enter your decision:");
    scanf("%d",&wish);
}while(wish==1);
}
